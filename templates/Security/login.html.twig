{% extends 'layout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container">
    <form method="post">
        <div class="row justify-content-center">
            <h1 class="h3 mb-3 justify-content-center">Se connecter</h1>
            <br>
        </div>
        <div class="row justify-content-center">
            {% if error %}
                <div class="col-md-4">
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
            {% endif %}
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 my-4">
                <label for="inputUsername" class="sr-only">Pseudo</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Pseudo" required autofocus>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 ">
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 my-4">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-primary " type="submit">Connexion</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
