{% extends 'layout.html.twig' %}

{% block title %}Snow Trick{% endblock %}

{% block body %}
    <main role="main">
        <div class="card bg-dark text-white">
            <img class="card-img" src="{{ asset('img/banner.jpg') }}" alt="Mountain">
            <div class="card-img-overlay">
                <h1 class="card-title text-center">Site communautaire Snow Trick</h1>
                <p class="card-text text-center">Retrouvez toutes les figures de stricks et partagez avec la communaut√© !</p>
                {% for message in app.flashes('success') %}
                <div class="row justify-content-md-center ">
                    <i class="col col-md-4 alert alert-success text-center">{{ message }}</i>
                </div>
                {%  endfor %}
            </div>
        </div>

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                {% for trick in tricks %}
                    {% if trick %}
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img class="card-img-top" src="{{ asset(trick.imagePath ) }}" alt="Ski">
                                <div class="card-body">
                                    <p class="card-text">{{ trick.name }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('trick_view', {slug: trick.slug}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">Voir</button></a>
                                            <a href="{{ path('trick_details', {slug: trick.slug}) }}"><button type="button" class="btn btn-sm btn-outline-secondary"><i class="fas fa-pencil-alt"></i></button></a>
                                            <a href="{{ path('trick_delete', {slug: trick.slug}) }}"><button type="button" class="btn btn-sm btn-outline-secondary"><i class="fas fa-trash-alt"></i></button></a>
                                        </div>
                                        <small class="text-muted">{{ trick.createdAt|date ('d/m/Y') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}